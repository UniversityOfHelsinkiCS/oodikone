{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2023"],
    "allowJs": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "../dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "index.js", "../shared/**/*"]
}
