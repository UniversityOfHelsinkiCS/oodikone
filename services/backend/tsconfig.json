{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true
  },
  "include": ["src/**/*", "index.js"]
}
