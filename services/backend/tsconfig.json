{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["index.js", "src/**/*"],
  "exclude": ["dist", "instrumented", "node_modules"]
}
