{
  "name": "oodikone",
  "description": "An application for analyzing university data.",
  "scripts": {
    "cypress": "cypress",
    "zx": "zx",
    "cli": "./cli.sh",
    "oodikone": "docker-compose --profile oodikone up --detach",
    "oodikone:real": "./run.sh oodikone real up --detach",
    "updater": "docker-compose --profile updater up --detach",
    "updater:real": "./run.sh updater real up --detach",
    "both": "docker-compose --profile oodikone --profile updater up --detach",
    "both:real": "./run.sh both real up --detach",
    "docker:down": "docker-compose down --remove-orphans",
    "lint:backend": "eslint services/backend",
    "lint:frontend": "concurrently 'eslint --ext .jsx,.js services/frontend' 'stylelint services/frontend/src/**/*.css'",
    "lint:userservice": "eslint services/userservice",
    "lint:sis-updater-scheduler": "eslint updater/sis-updater-scheduler",
    "lint:sis-updater-worker": "eslint updater/sis-updater-worker",
    "lint:cypress": "eslint cypress",
    "lint": "concurrently 'npm run lint:*'",
    "lintfix:backend": "prettier --write services/backend/**/*.{js,json} && eslint --fix services/backend",
    "lintfix:frontend": "eslint --ext .jsx,.js --fix services/frontend && stylelint services/frontend/src/**/*.css",
    "lintfix:userservice": "prettier --write services/userservice/**/*.{js,json} && eslint --fix services/userservice",
    "lintfix:sis-updater-scheduler": "prettier --write updater/sis-updater-scheduler/**/*.{js,json} && eslint --fix updater/sis-updater-scheduler",
    "lintfix:sis-updater-worker": "prettier --write updater/sis-updater-worker/**/*.{js,json} && eslint --fix updater/sis-updater-worker",
    "lintfix:cypress": "prettier --write cypress/**/*.{js,json} && eslint --fix cypress",
    "lintfix": "concurrently 'npm run lintfix:*'",
    "linttest:other": "zx ./scripts/lint-other.mjs",
    "diff:students": "docker exec backend node /usr/src/app/src/sisoodi_diff/students/index.js",
    "diff:populations": "docker exec backend node /usr/src/app/src/sisoodi_diff/populations.js",
    "diff:courses": "docker exec backend node /usr/src/app/src/sisoodi_diff/courses/index.js",
    "diff:transfers": "docker exec backend node /usr/src/app/src/sisoodi_diff/transfers.js",
    "diff:trends": "docker exec backend node /usr/src/app/src/sisoodi_diff/trends.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "services/**/*.{js,jsx,json}": "eslint",
    "updater/**/*.{js,jsx,json}": "eslint",
    ".github/workflows/*": "actionlint",
    "**/*/Dockerfile": "hadolint",
    "docker-compose.yml": "docker-compose config -q",
    "docker-compose.real.yml": "docker-compose -f docker-compose.yml -f docker-compose.real.yml config -q",
    "docker-compose.ci.yml": "docker-compose -f docker-compose.ci.yml config -q",
    "docker-compose.test.yml": "docker-compose -f docker-compose.test.yml config -q"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UniversityOfHelsinkiCS/oodikone.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UniversityOfHelsinkiCS/oodikone/issues"
  },
  "homepage": "https://github.com/UniversityOfHelsinkiCS/oodikone#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-syntax-jsx": "^7.14.5",
    "concurrently": "^6.2.0",
    "cypress": "^7.7.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "zx": "^2.0.0"
  }
}
